        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Сети Петри" 
        Height="450" 
        Width="800">
    
    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*" />
